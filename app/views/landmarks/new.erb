<h2>Create New Landmark</h2>

<form action="/landmarks" method="post">
  <h3><label for="landmark_name">Name: </label><input type="text" name="landmark[name]" id="landmark_name"></h3>
  <h3><label for="landmark_year_completed">Year Completed: <input type="integer" name="landmark[year_completed]" id="landmark_year_completed"></label></h3>
  <h3>Figures</h3>
  <%@figures.each do |figure|%>
    <label for="figure_<%=figure.id%>"><%=figure.name%></label><input type="radio" name="landmark[figure_id]" value = <%=figure.id%> id="figure_<%=figure.id%>">
    <br>
    <%end%>
    <h3><input type="submit" value="Create New Landmark"></h3>
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
