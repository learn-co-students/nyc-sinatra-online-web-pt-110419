<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%=@landmark.id%>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <label for="name">Name: </label>
  <input type="text" name="landmark[name]" id="name" value="<%=@landmark.name%>">

  <label for="year_completed">Year completed: </label>
  <input type="text" name="landmark[year_completed]" id="year_completed" value="<%=@landmark.year_completed%>">

<h2>Figure</h2>
<% @figures.each do |figure| %>
    <input type="radio" name="landmark[figure_id]" id="<%= figure.id %>" value="<%= figure.id %>" <%='checked' if @landmark.figure == (figure) %>><%= figure.name %></input><br>
  <% end %>
<input type="submit" value="Edit Landmark">
</form>
<p></p>
<a class="button" href="/figures">Figures</a>
<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
