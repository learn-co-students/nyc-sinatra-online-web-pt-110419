<h2>Create New Figure</h2>

<form action="/figures" method="post">
  <label for="figure_name">Name: </label>
  <input type="text" name="figure[name]" id="figure_name">
<h2>Titles</h2>
<%@titles.each_with_index do |title,i|%>
  <label for="title_<%=title.id%>"><%=title.name%></label><input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>">
  <br>
  <%end%>
<label for="title_name"><h2>Create New Title</h2></label>
<p><input type="text" name="title[name]" id = "title_name"></p>

<h2>Landmarks</h2>
<%@landmarks.each_with_index do |landmark,i|%>
  <label for="landmark_name<%=i%>"><%=landmark.name%></label><input type="checkbox" name="figure[landmark_ids][]" id="landmark_name<%=i%>">
  <br>
  <%end%>
<h2>Create New Landmark</h2>
<p><label for="landmark_name">Name: </label>
  <input type="text" name="landmark[name]" id = "landmark_name">

 <label for="year_completed">Year: </label>
<input type="integer" name="year_completed" id="year_completed">
<input type="submit" value="Create New Figure"></p>




</form>
<p></p>
<a class="button" href="/figures">Figures</a>
<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
