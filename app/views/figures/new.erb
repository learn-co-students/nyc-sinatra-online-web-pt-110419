<h2>Create New Figure</h2>

<form action="/figures" method="post">
  <label for="figure_name">Name: </label>
  <input type="text" name="figure[name]" id="figure_name">
<h2>Titles</h2>
<%@titles.each_with_index do |title,i|%>
  <label for="title_<%=title.id%>"><%=title.name%></label><input type="checkbox" name="figure[title_ids][]" value =<%=title.id%> id="title_<%=title.id%>">
  <br>
  <%end%>
<label for="new_title"><h2>Create New Title</h2></label>
<p><input type="text" name="title[name]" id = "new_title"></p>

<h2>Landmarks</h2>
<%@landmarks.each_with_index do |landmark,i|%>
  <label for="landmark_<%=landmark.id%>"><%=landmark.name%></label><input type="checkbox" name="figure[landmark_ids][]" value = <%=landmark.id%> id="landmark_<%=landmark.id%>">
  <br>
  <%end%>
<h2>Create New Landmark</h2>
<p><label for="new_landmark">Name: </label>
  <input type="text" name="landmark[name]" id = "new_landmark"></input>

 <label for="year_completed">Year: </label>
<input type="integer" name="landmark[year_completed]" id="year_completed"></input>
<input type="submit" value="Create New Figure"></p>




</form>
<p></p>
<a class="button" href="/figures">Figures</a>
<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
