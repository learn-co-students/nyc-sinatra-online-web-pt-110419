<h1><%=@figure.name%></h1>

<h2>Titles</h2>
<ul>
  <%@figure.titles.each do |title|%>
  <li><a href="/figures/<%=title.id%>"><%=title.name%></a></li>
  <%end%>
</ul>
<h3>Landmarks</h3>
<ul>
  <%@figure.landmarks.each do |landmark|%>
  <li><a href="/landmarks/<%=landmark.id%>"><%=landmark.name%></a></li>
  <%end%>
</ul>

<a class="button" href="/figures/<%= @figure.id %>/edit">Edit Figures</a>
<a class="button" href="/figures">Figures</a>
